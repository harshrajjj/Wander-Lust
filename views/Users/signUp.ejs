<%layout("./layouts/boilerPlate")%> 


<div class="row">
    <div class="col-md-6 offset-md-3">
        <br />
        <h2>Sign Up</h2>
        <form action="/signup" method="post" novalidate class="needs-validation">
            <div>
                <label for="name" class="form-label">UserName</label>
                <input
                    type="text"
                    name="username"
                    placeholder="UserName"
                    class="form-control"
                    required
                />
                <div class="valid-feedback">Name Looks Good !</div>
                <div class="invalid-feedback">Name Is Required</div>
            </div>
            <br />
            <div>
                <label for="email" class="form-label">Email</label>
                <input
                    type="email"
                    name="email"
                    placeholder="Email"
                    class="form-control"
                    required
                />
                <div class="valid-feedback">Email Looks Good !</div>
                <div class="invalid-feedback">Email Is Required</div>
            </div>
            <br />
            <div>
                <label for="password" class="form-label">Password</label>
                <input
                    type="password"
                    name="password"
                    placeholder="Password"
                    class="form-control"
                    required
                />
                <div class="valid-feedback">Password Looks Good !</div>
                <div class="invalid-feedback">Password Is Required</div>
            </div>
            <br />
            <!-- <div>
                <label for="passwordConfirmation" class="form-label">Password Confirmation</label>
                <input
                    type="password"
                    name="passwordConfirmation"
                    placeholder="Password Confirmation"
                    class="form-control"
                    required
                />
                <div class="valid-feedback">Password Confirmation Looks Good !</div>
                <div class="invalid-feedback">Password Confirmation Is Required</div>
            </div> -->
            <br />
            <button type="submit" class="btn btn-primary">Sign Up</button>
        </form>
    </div>
</div>